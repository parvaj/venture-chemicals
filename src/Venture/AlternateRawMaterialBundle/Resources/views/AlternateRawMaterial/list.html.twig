{% extends 'VentureAlternateRawMaterialBundle::layout.new.html.twig' %}

{% block title %}Alternate Raw Materials Listing{% endblock%}

{% block middle %}
    {{ parent() }}

    <div class="row">
        <div class="col-md-12">
            <h4>Alternate Raw Materials</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row space-top">
        <div class="col-md-2">
            <button type="button"
                    data-path="{{ path('venture_new_alternate_raw_material') }}"
                    class="btn btn-default btn-sm target">Add New</button>
        </div>
        <div class="col-md-10"></div>
    </div>

    <div class="row space-top">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="space-top">List all active Alternate Raw Materials</div>
        </div>
        <div class="col-md-6">
            <div class="checkbox float-right">
                <label>
                    {% if status %}
                        <input type = "checkbox" onchange="window.location='{{ path('venture_list_alternate_raw_material',  {'type': 'show_all'}) }}'"/> Show Inactive
                    {% else %}
                        <input type = "checkbox" checked = "checked" onchange="window.location='{{ path('venture_list_alternate_raw_material',  {'type': 'show_active'}) }}'"/> Show Inactive
                    {% endif %}
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Item#</th>
                    <th>Description</th>
                    <th>Amount In Stock</th>
                    <th>Amount on Purchase order</th>
                </tr>
                </thead>
                <tbody>
                {% for alternateRawMaterial in alternateRawMaterials %}
                    <tr>
                        <td><a class="my_custom_anchor" href="{{ path('venture_show_alternate_raw_material',  {'id': alternateRawMaterial.id}) }}">{{ alternateRawMaterial.ItemName }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_show_alternate_raw_material',  {'id': alternateRawMaterial.id}) }}">{{ alternateRawMaterial.ItemDescription }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_show_alternate_raw_material',  {'id': alternateRawMaterial.id}) }}">0</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_show_alternate_raw_material',  {'id': alternateRawMaterial.id}) }}">0</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">There is no Alternate Raw material listed yet</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>
{% endblock %}