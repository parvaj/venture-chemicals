<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Role</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr>
                    <td>{{ group.name }}</td>
                    <td>
                        <a class="my_custom_anchor" href="{{path("fos_user_group_show", {"groupname" : group.name})}}">Show</a> |
                        <a class="my_custom_anchor" href="{{path("fos_user_group_edit", {"groupname" : group.name})}}">Edit</a> |
                        <a class="my_custom_anchor delete" href="{{path("fos_user_group_delete", {"groupname" : group.name})}}">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr class="empty">
                    <td colspan="3">There are no Roles defined yet</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot></tfoot>
        </table>
    </div>
</div>

<div class="row space-bottom">
    <div class="col-md-12">
        <button type="button"
                data-path="{{ path('fos_user_group_new') }}"
                class="btn btn-default btn-sm target">Add Role</button>
    </div>
</div>