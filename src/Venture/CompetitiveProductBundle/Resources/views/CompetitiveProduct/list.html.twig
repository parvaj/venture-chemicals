{% extends 'VentureCompetitiveProductBundle::layout.html.twig' %}

{% block title %} Competitive Product Listing {% endblock%}

{% block middle %}
    {{ parent() }}

    <div class="row">
        <div class="col-md-12">
            <h4>Competitive Product</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row space-top">
        <div class="col-md-2">
            <button type="button"
                    data-path="{{ path('venture_competitive_product_add') }}"
                    class="btn btn-default btn-sm target">Add New</button>
        </div>
        <div class="col-md-10"></div>
    </div>

    <div class="row space-top">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="space-top">List All Active Competitive Products</div>
        </div>
        <div class="col-md-6">
            <div class="checkbox float-right">
                <label>
                    {% if status %}
                        <input type = "checkbox" onchange="window.location='{{ path('venture_competitive_product_list',  {'type': 'show_all'}) }}'"/> Show Inactive
                    {% else %}
                        <input type = "checkbox" checked = "checked" onchange="window.location='{{ path('venture_competitive_product_list',  {'type': 'show_active'}) }}'"/> Show Inactive
                    {% endif %}
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Item#</th>
                    <th>Supplier</th>
                    <th>Amount In Stock</th>
                    <th>Amount on Sales order</th>
                </tr>
                </thead>
                <tbody>
                {% for product in competitiveProducts %}
                    <tr>
                        <td><a class="my_custom_anchor" href="{{ path('venture_competitive_product_view',  {'id': product.id}) }}">{{ product.ItemName }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_competitive_product_view',  {'id': product.id}) }}">{{ product.ItemSupplier }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_competitive_product_view',  {'id': product.id}) }}">0</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_competitive_product_view',  {'id': product.id}) }}">0</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">There Is No Competitive Product Found</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>
{% endblock %}