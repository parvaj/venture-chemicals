{% extends 'VentureIntermediateBundle::layout.html.twig' %}

{% block title %}Intermediate Listing{% endblock%}

{% block middle %}
    {{ parent() }}

    <div class="row">
        <div class="col-md-12">
            <h4>Intermediate</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row space-top">
        <div class="col-md-2">
            <button type="button"
                    data-path="{{ path('venture_intermediate_add') }}"
                    class="btn btn-default btn-sm target">Add New</button>
        </div>
        <div class="col-md-10"></div>
    </div>

    <div class="row space-top">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="space-top">List all active Intermediate</div>
        </div>
        <div class="col-md-6">
            <div class="checkbox float-right">
                <label>
                    {% if status %}
                        <input type = "checkbox" onchange="window.location='{{ path('venture_intermediate_list',  {'type': 'show_all'}) }}'"/> Show Inactive
                    {% else %}
                        <input type = "checkbox" checked = "checked" onchange="window.location='{{ path('venture_intermediate_list',  {'type': 'show_active'}) }}'"/> Show Inactive
                    {% endif %}
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Item#</th>
                    <th>Name</th>
                    <th>Amount In Stock</th>
                </tr>
                </thead>
                <tbody>
                {% for product in intermediates %}
                    <tr>
                        <td><a class="my_custom_anchor" href="{{ path('venture_intermediate_view',  {'id': product.id}) }}">{{ product.ItemNumber }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_intermediate_view',  {'id': product.id}) }}">{{ product.ItemName }}</a></td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_intermediate_view',  {'id': product.id}) }}">0</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">There Is No Intermediate Entered</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>
{% endblock %}