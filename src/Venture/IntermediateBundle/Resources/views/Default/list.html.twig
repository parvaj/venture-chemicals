{% extends 'VentureIntermediateBundle::layout.html.twig' %}

{% block title %}Intermediate Listing{% endblock%}



{% block main %}
    {{ parent() }}
    <div class="cont"> 
        <h2 class="heading">{{ "intermediate" | upper }}</h2>
        <button class="add-new target" data-location="{{ path('venture_intermediate_add') }}">Add new</button>
        
        <div class="listing-label">
            <p class="label">List All Active Intermediates</p>
            {% if status %} 
            <p class="list-all">
                <input class="target" type = "checkbox" data-location="{{ path('venture_intermediate_list',  {'type': 'show_all'}) }}"/> Show Inactive
            </p>
            {% else %}
            <p class="list-all">
                <input class="target" type = "checkbox" checked = "checked" data-location="{{ path('venture_intermediate_list',  {'type': 'show_active'}) }}"/> Show Inactive
            </p>
            {% endif %}            
        </div>
        
        <div class="clear"></div>
         
        <table class="raw-materials-listing">
            <thead>
                <tr>
                    <th width="30%">Item#</th>
                    <th width="30%">Name</th>
                    <th width="40%">Amount In Stock</th>
                </tr>
            </thead>
            <tbody>
                {% for product in intermediates %}
                <tr class="records {{ cycle(['odd', 'even'], loop.index0) }}">
                    <td><a href="{{ path('venture_intermediate_view',  {'id': product.id}) }}">{{ product.ItemNumber }}</a></td>
                    <td><a href="{{ path('venture_intermediate_view',  {'id': product.id}) }}">{{ product.ItemName }}</a></td>
                    <td><a href="{{ path('venture_intermediate_view',  {'id': product.id}) }}">0</a></td>
                </tr>
                {% else %}
                <tr class="empty">
                    <td colspan="5">There Is No Intermediate Entered</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
   </div>
	
{% endblock %}  