{% extends 'VentureIntermediateBundle::layout.html.twig' %}

{% block title %}Intermediate History{% endblock%}

{% block middle %}
    {{ parent() }}

    <div class="row">
        <div class="col-md-12">
            <h4>Intermediates:
                <small>{{ intermediate.ItemNumber }}: </small>
                <small>History:</small>
            </h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>{{"date of revision" | upper}}</th>
                    <th>{{"reason for change" | upper}}</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for version in versions %}
                    <tr>
                        <td>{{ version.loggedAt|date('F j, Y h:iA')}}</td>
                        <td>{{ version.reasonForChange }}</td>
                        <td><a class="my_custom_anchor" href="{{ path('venture_intermediate_history_details', {'id': version.id}) }}">VIEW</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No Version Found</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>
{% endblock %}