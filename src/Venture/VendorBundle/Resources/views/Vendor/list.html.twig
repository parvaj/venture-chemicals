{% extends 'VentureVendorBundle::layout.html.twig' %}

{% block title %} Vendor Listing {% endblock%}

{% block middle %}
    {{ parent() }}

    <div class="row">
        <div class="col-md-12">
            <h4>VENDORS</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row space-top">
        <div class="col-md-2">
            <button type="button"
                    data-path="{{ path('VentureVendorBundle_vendor_add',  {'id': id}) }}"
                    class="btn btn-default btn-sm target">Add New</button>
        </div>
        <div class="col-md-10"></div>
    </div>

    <div class="row space-top">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="space-top">List of all active vendors</div>
        </div>
        <div class="col-md-6">
            <div class="checkbox float-right">
                <label>
                    {% if status %}
                    <input type = "checkbox" onchange="window.location='{{ path('VentureVendorBundle_vendor_list',  {'type': 'show_all'}) }}'"/> Show Inactive
                    {% else %}
                    <input type = "checkbox" checked = "checked" onchange="window.location='{{ path('VentureVendorBundle_vendor_list',  {'type': 'show_active'}) }}'"/> Show Inactive
                    {% endif %}
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row space-top">
        <div class="col-md-12">
            <p class="text-left">Total Record: <b>{{ pagination.getTotalItemCount }}</b></p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="border"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'Name', 'v.name') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Phone', 'v.phone') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'E-mail', 'v.contact_1_email') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Contact', 'v.contact_1') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for vendor in pagination %}
                        <tr>
                            <td><a class="my_custom_anchor" href="{{ path('VentureVendorBundle_vendor_details',  {'id': vendor.id}) }}">{{ vendor.name }}</a></td>
                            <td><a class="my_custom_anchor" href="{{ path('VentureVendorBundle_vendor_details',  {'id': vendor.id}) }}">{{ vendor.phone }}</a></td>
                            <td><a class="my_custom_anchor" href="{{ path('VentureVendorBundle_vendor_details',  {'id': vendor.id}) }}">{{ vendor.contact1Email }}</a></td>
                            <td><a class="my_custom_anchor" href="{{ path('VentureVendorBundle_vendor_details',  {'id': vendor.id}) }}">{{ vendor.contact1 }}</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">There is no Vendor listed yet</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}