    <table id="hor-minimalist-a">
        <thead>
            <th>Type Name</th>
            <th>Status</th>
            <th>Updated</th>
            <th>Action</th>
        </thead>
        <tbody>
            {% for type in alltype %}
            <tr class="comment {{ cycle(['odd', 'even'], loop.index0) }}">               
                <td>{{ type.name }}</td>
                <td>{{ (type.isActive)?"Active":"Inactive" }}</td>
                <td>{{ type.updated|date('F j, Y h:iA') }}</td>
                <td>
                    <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_pipelinetype_update', {'id': type.id}) }}">Edit</a> | 
                    <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_pipelinetype_delete', {'id': type.id}) }}" onclick="return confirmDel();">Delete</a>
                </td>
            </tr>
            {% else %}
            <tr class="empty">
                <td colspan="5">There are no type entered yet</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>