<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Sales Price Point</th>
                <th>Status</th>
                <th>Updated</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for salesPricePoint in salesPricePoints %}
                <tr>
                    <td>{{ salesPricePoint.salesCostPoint }}</td>
                    <td>{{ salesPricePoint.approved?'Active':'Inactive' }}</td>
                    <td>{{ salesPricePoint.updated|date('F j, Y h:iA') }}</td>
                    <td>
                        <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_sales_price_point_update', {'id': salesPricePoint.id}) }}">Edit</a> |
                        <a class="my_custom_anchor delete" href="{{ path('SettingsConfigBundle_sales_price_point_delete', {'id': salesPricePoint.id}) }}" >Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">There are no price point entered yet</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot></tfoot>
        </table>
    </div>
</div>