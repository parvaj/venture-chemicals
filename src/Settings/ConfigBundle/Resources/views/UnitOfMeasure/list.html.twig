    <table id="hor-minimalist-a">
        <thead>
            <th>Unit Of Measure</th>
            <th>Status</th>
            <th>Updated</th>
            <th>Action</th>
        </thead>
        <tbody>
            {% for unit in units %}
            <tr class="records {{ cycle(['odd', 'even'], loop.index0) }}">
                <td>{{ unit.name }}</td>
                
                <td>{% if unit.approved %} 
                        Active
                    {% else %}
                        Inactive
                    {% endif %}
                </td>

                <td>{{ unit.updated|date('F j, Y h:iA') }}</td>
                <td>
                    <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_unit_of_measure_update', {'id': unit.id}) }}">Edit</a> /
                    <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_unit_of_measure_delete', {'id': unit.id}) }}" onclick="return confirmDel();">Delete</a>
                </td>
            </tr>
            {% else %}
            <tr class="empty">
                <td colspan="5">There is no unit of measure listed yet</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>