<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Shipping Method</th>
                <th>Status</th>
                <th>Updated</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for method in methods %}
                <tr>
                    <td>{{ method.name }}</td>
                    <td>{{ method.approved?'Active':'Inactive' }}</td>
                    <td>{{ method.updated|date('F j, Y h:iA') }}</td>
                    <td>
                        <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_shipping_method_update', {'id': method.id}) }}">Edit</a> |
                        <a class="my_custom_anchor delete" href="{{ path('SettingsConfigBundle_shipping_method_delete', {'id': method.id}) }}" >Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">There is no shipping method listed yet</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot></tfoot>
        </table>
    </div>
</div>