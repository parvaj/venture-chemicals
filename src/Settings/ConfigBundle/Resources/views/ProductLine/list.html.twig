    <table id="hor-minimalist-a">
        <thead>
            <th>Product Line</th>
            <th>Status</th>
            <th>Updated</th>
            <th>Action</th>
        </thead>
        <tbody>
            {% for productLine in productLines %}
            <tr class="comment {{ cycle(['odd', 'even'], loop.index0) }}">               
                <td>{{ productLine.name }}</td>
                <td>{{ (productLine.isActive)?"Active":"Inactive" }}</td>
                <td>{{ productLine.updated|date('F j, Y h:iA') }}</td>
                <td>
                    <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_product_line_update', {'id': productLine.id}) }}">Edit</a> | 
                    <a class="my_custom_anchor" href="{{ path('SettingsConfigBundle_product_line_delete', {'id': productLine.id}) }}" onclick="return confirmDel();">Delete</a>
                </td>
            </tr>
            {% else %}
            <tr class="empty">
                <td colspan="5">There are no product line entered yet</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>